<div class="row">
  <form action="/user/search" method="post"> <!-- Cambiado a "/user/search" -->
    <input type="hidden" name="searchType" value="user" /> <!-- Campo oculto para indicar búsqueda por usuario -->
    <div class="col s12 m12 l12 valign-wrapper">
      <div class="col s10 m9 l10 input-field">
        <input id="search" type="search" class="validate" name="searchTerm" value="{{value}}" required minlength="1">
        <span 
          class="helper-text"
          data-error="Es necesario ingresar el término de búsqueda"
          data-success="✅ Correcto"
        ></span>
        <label for="search">Buscar Usuario</label> <!-- Modificado el texto del label -->
      </div>
      <div class="col s2 m3 l2">
        <button class="btn waves-effect waves-light btn-floating" type="submit"> <i class="material-icons">search</i></button>
      </div>
    </div>
  </form>
</div>


{{> _user}}