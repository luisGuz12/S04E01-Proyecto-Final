<div class='row'>
  <div class='col s12 m10 offset-m1 18 offset-12'>
    <div class='card'>
      <div class='card-image'>
        <img src='/images/addbook.png' alt='Imagen de edicion de libro' />
        <span class='card-title add-project' style='font-weight: bolder;'>
          Editar libro
        </span>
      </div>
      <form autocomplete="off" action="/book/edit/{{ book._id }}?_method=put" method="post">
     <div class='card-content'>
          <div class='input-field'>
            <label for='book-name'>
              Nombre del libro
            </label>
            <input
              type='text'
              id='book-name'
              name='name'
              placeholder='Ingrese nombre del libro'
              class='validate'
              value='{{book.name}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar el nombre del libroüëÜ'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='book-description'>
              Descripci√≥n del libro
            </label>
            <textarea
              name='description'
              id='book-description'
              class='materialize-textarea validate'
              required
            >{{book.description}}</textarea>
            <span
              class='helper-text'
              data-error='üëÜ Debe ingresar una descripci√≥n üëÜ'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.description}}
              <span style='color: crimson;'>Error:
                {{errorModel.description}}</span>
            {{/if}}
          </div>
        </div>
        <div class='card-action'>
          <button class='blue darken-3 waves-effect waves-light btn'>
            <i class='material-icons left'>edit</i>
            Editar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>