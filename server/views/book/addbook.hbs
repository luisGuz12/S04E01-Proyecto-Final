<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/books.jpg" alt="Imagen alta del libro">
                <span 
                class="card-title add-project"
                style="font-weight: bolder">
                Alta Libro
                </span>
            </div>
            <form autocomplete="off" action="/book/add" method="post">
            <div class="card-content">
                <div class="input-field">
                    <label for="book-name">
                        Nombre del libro
                    </label>
                    <input type="text"
                    id="book-name"
                    name="name"
                    placeholder="Ingrese nombre del libro"
                    class="validate"
                    required>                    
                </div>
                <div class="input-field">
                    <label for="book-autor">
                        Autor del libro
                    </label>
                    <input type="text"
                    id="book-autor"
                    name="autor"
                    placeholder="Ingrese nombre del libro"
                    class="validate"
                    required>                    
                </div>
                <div class="input-field">
                  <label for="book-categoria">Seleccione Categoria</label>
                  <select id="book-categoria" name="categoria" class="validate" required>
                      <!-- Aquí puedes agregar opciones específicas del libro -->
                      <option value="" disabled selected></option>
                      <option value="Miedo">Miedo</option>
                      <option value="Ciencia_Ficcion">Ciencia Ficcion</option>
                      <option value="Aventura">Aventura</option>
                      <option value="Fantasia">Fantasia</option>
                      <option value="Comedia">Comedia</option>
                      <!-- Puedes agregar más opciones según sea necesario -->
                  </select>
                </div>
                <div class="input-field">
                    <label for="book-isbn">
                        ISBN del libro
                    </label>
                    <input type="text"
                    id="book-isbn"
                    name="isbn"
                    placeholder="Ingrese ISBN del libro"
                    class="validate"
                    required>                    
                </div>
                <div class="input-field">
                    <label for="book-copias">
                        Copias del libro
                    </label>
                    <input type="text"
                    id="book-copias"
                    name="numerocopias"
                    placeholder="Ingrese las copias del libro"
                    class="validate"
                    required>                    
                </div>
                <div class="input-field">
                    <label for="book-description">
                        descripcion del libro
                    </label>
                    <textarea name="description"
                    id="book-description"
                    class="materialize-textarea validate"
                    required></textarea>
                </div>
            </div>
            <div class="card-action">
                <button
                class="blue darken-3 waves-effect waves-light btn">
                <i class="material-icons left">note_add</i> Agregar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>