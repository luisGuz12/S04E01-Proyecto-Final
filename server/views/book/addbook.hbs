<div class="row">
    <div class="col s12 m10 offset-m1 18 offset-12">
        <div class="card">
            <div class="card-image">
                <img src="/images/addbook.png" alt="Imagen creacion del proyecto">
                <span 
                class="card-title add-project"
                style="font-weight: bolder">
                Agregar Libro
                </span>
            </div>
            <form autocomplete="off" action="/project/add" method="post">
            <div class="card-content">
                <div class="imput-field">
                    <label for="book-name">
                        Nombre del libro
                    </label>
                    <input 
                    type="text"
                    id="book-name"
                    name="name"
                    required
                    placeholder="Ingrese nombre del libro"
                    class="validate">
                </div>
                <div class="imput-field">
                     <label for="book-description">
                        Descripcion del libro
                    </label>
                    <textarea 
                    name="description" 
                    id="book-description"
                    required
                    class="materialize-textarea"></textarea>
                </div>
            </div>
            <div class="card-action">
                <button class="blue darken-3 waves-effect waves-light btn">
                    <i class="material-icons left">note_add</i>Agregar
                </button>
            </div>
            </form>
        </div>
    </div>
</div>